{
  "Routes": [
    //USER API
    {
      "DownstreamPathTemplate": "/api/User/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "4001"
        }
      ],
      "UpstreamPathTemplate": "/User/{everything}"
    },

    //Mail API
    {
      "DownstreamPathTemplate": "/api/Mail/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "4002"
        }
      ],
      "UpstreamPathTemplate": "/Mail/{everything}"
    }
  ]
}

